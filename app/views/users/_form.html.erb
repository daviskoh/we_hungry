<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.label @user.errors.full_messages[0], class: 'error' unless @user.errors.none? %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.label @user.errors.full_messages[1], class: 'error' unless @user.errors.none? %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <!-- add allergies -->

  <%= f.submit logged_in? ? 'Update' : 'Sign Up', class: 'button' %>
<% end %>