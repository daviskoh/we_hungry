<% unless @user.errors.none? %>
  <% @user.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <!-- add allergies -->
  <%= f.label :vegetarian %>
  <%= f.check_box :vege %>

  <%= f.label :vegan %>
  <%= f.check_box :vegan %>

  <%= f.label :dairy %>
  <%= f.check_box :lactose %>

  <%= f.label :nut_allergy %>
  <%= f.check_box :nut %>

  <%= f.submit %>
<% end %>